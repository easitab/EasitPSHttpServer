<?xml version="1.0" encoding="UTF-8"?>
<settings>
    <LogName>PShttpServer</LogName> <!--Name for logfile. If logname is PShttpServer logfile will be named PShttpServer_todaysdate.log-->
    <LogDirectory>logs</LogDirectory> <!--Folder to put logfiles in, relative to where start-httpserver.ps1 is located -->
    <LogLevelSwitch>INFO</LogLevelSwitch> <!-- Default logging level -->
    <writeToHost>false</writeToHost> <!-- Used when running server in console. true or false -->
    <ErrorHandling>SilentlyContinue</ErrorHandling> <!-- How to handle errors, more info at https://docs.microsoft.com/en-us/powershell/module/microsoft.powershell.core/about/about_preference_variables?view=powershell-5.1#erroractionpreference -->
    <RotationInterval>30</RotationInterval> <!-- How long to keep files for, in days -->
</settings>
